DROP TABLE IF EXISTS `answers`;

CREATE TABLE `answers` (
  `id` TINYINT NULL AUTO_INCREMENT DEFAULT NULL,
  `content` VARCHAR NULL DEFAULT NULL,
  `id_surveys` TINYINT NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
);

