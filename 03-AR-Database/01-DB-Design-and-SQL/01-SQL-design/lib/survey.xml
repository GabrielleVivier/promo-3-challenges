CREATE TABLE `votes` (
  `id` TINYINT NULL AUTO_INCREMENT DEFAULT NULL,
  `id_surveys` TINYINT NULL DEFAULT NULL,
  `id_answers` TINYINT NULL DEFAULT NULL,
  `id_users` TINYINT NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
