DROP TABLE IF EXISTS `surveys`;

CREATE TABLE `surveys` (
  `id` TINYINT NULL AUTO_INCREMENT DEFAULT NULL,
  `name` VARCHAR NULL DEFAULT NULL,
  `question` VARCHAR NULL DEFAULT NULL,
  `id_users` TINYINT NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
);

